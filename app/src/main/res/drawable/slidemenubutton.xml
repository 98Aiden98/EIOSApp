<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/black">
<item android:left="-2dp" android:right="-2dp" android:id="@android:id/mask">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <corners android:radius="10dp"/>
        <stroke android:width="2dp" android:color="#90ffffff"/>
    </shape>
</item>

<item
   android:left="-2dp" android:right="-2dp" android:id="@android:id/background">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <corners android:radius="10dp"/>
        <stroke android:width="2dp" android:color="#60ffffff"/>
    </shape>
</item>
</ripple>